@model MovieRental.ViewModel.RandomMovieViewModels
@{
    ViewBag.Title = "Index";
}
<h2>Movies</h2>

<div class="col-lg-4" style="padding:5px 0px;">
    
    @Html.ActionLink("New Movie","New","Movie",null,new { @class = "btn btn-primary"})
</div>
<table class="container-fluid table table-bordered table-striped" >
    <thead>
        <tr>
            <th class="col-md-6">
                Movie Name
            </th>
            <th class="col-md-6">
                Genre
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var MovieDetails in Model.Movie)
        {
            <tr>
                <td>@Html.ActionLink(MovieDetails.MovieName, "Edit", "Movie", new { Id = MovieDetails.Id},null) </td>
                <td>@MovieDetails.MovieType.Genre</td>
                
            </tr>
        }
    </tbody>
</table>


