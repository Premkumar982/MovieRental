@model MovieRental.ViewModel.MovieViewModel
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Form</h2>

@using (Html.BeginForm("SaveMovie", "Movie"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.MovieName)
        @Html.TextBoxFor(m => m.Movies.MovieName, new { @class="form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movies.ReleaseDate)
        @Html.TextBoxFor(m => m.Movies.ReleaseDate,"{0: dd/MM/yyyy}", new { @class="form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m=>m.Movies.MovieTypeId)
        @Html.DropDownListFor(m=>m.Movies.MovieTypeId,new SelectList(Model.MovieGenreList, "Id","Genre"), "Select Genre", new { @class="form-control"} )
    </div>

    <div class="form-group">
        @Html.LabelFor(m=>m.Movies.NumberInStock)
        @Html.TextBoxFor(m=>m.Movies.NumberInStock, new { @class="form-control"})
    </div>

    <div>
        @Html.HiddenFor(m=>m.Movies.Id)
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}
